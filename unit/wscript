import os

def build(bld):
    bld.program(
        source = 'ctest_alloc.c',
        target = 'ctest_alloc',
        includes = '. ../zero',
        use = 'gkylzero',
    )

    bld.program(
        source = 'ctest_ref_count.c',
        target = 'ctest_ref_count',
        includes = '. ../zero',
        use = 'gkylzero',
    )

    bld.program(
        source = 'ctest_range.c',
        target = 'ctest_range',
        includes = '. ../zero',
        use = 'gkylzero',
    )    
